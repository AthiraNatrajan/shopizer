pipeline {
    agent any 
    triggers {
        cron('30 17 * * *')
    }
    stages {
        stage('clone') { 
            steps {
                git url:'https://github.com/udaykiran-dhatrika/shopizer.git' 
            }
        }
        stage('merge') {
            steps {
                sh "git checkout release",
                   "git merge origin/develop --no-ff",
                   "git push git@github.com:udaykiran-dhatrika/shopizer.git --force"
        }
    }
        stage('install') { 
            steps {
                sh 'mvn package'
            }
        }
    }
}